<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/confirmButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/storeContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:gravity="center_vertical">

                <RadioButton
                    android:id="@+id/radioWalmart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:layout_width="86dp"
                    android:layout_height="100dp"
                    android:layout_marginStart="12dp"
                    android:contentDescription="Walmart"
                    android:src="@drawable/image1" />

                <RadioButton
                    android:id="@+id/radioSuperstore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:layout_width="86dp"
                    android:layout_height="100dp"
                    android:layout_marginStart="12dp"
                    android:contentDescription="Superstore"
                    android:src="@drawable/image2" />
            </LinearLayout>


            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:padding="8dp" android:gravity="center_vertical">

            </LinearLayout>


            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:padding="8dp" android:gravity="center_vertical">
                <RadioButton android:id="@+id/radioCostco" android:layout_width="wrap_content" android:layout_height="wrap_content"/>

                <ImageView
                    android:layout_width="86dp"
                    android:layout_height="100dp"
                    android:layout_marginStart="12dp"
                    android:contentDescription="Costco"
                    android:src="@drawable/image7" />

                <RadioButton
                    android:id="@+id/radioShoppers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:layout_width="86dp"
                    android:layout_height="100dp"
                    android:layout_marginStart="12dp"
                    android:contentDescription="Shoppers Drug Mart"
                    android:src="@drawable/image4" />
            </LinearLayout>


            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:padding="8dp" android:gravity="center_vertical">

            </LinearLayout>


            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:padding="8dp" android:gravity="center_vertical">
                <RadioButton android:id="@+id/radioIndependent" android:layout_width="wrap_content" android:layout_height="wrap_content"/>

                <ImageView
                    android:layout_width="86dp"
                    android:layout_height="100dp"
                    android:layout_marginStart="12dp"
                    android:contentDescription="Independent Grocer"
                    android:src="@drawable/image5" />

                <RadioButton
                    android:id="@+id/radioFreshco"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:layout_width="86dp"
                    android:layout_height="100dp"
                    android:layout_marginStart="12dp"
                    android:contentDescription="FreshCo"
                    android:src="@drawable/image6" />
            </LinearLayout>


            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:padding="8dp" android:gravity="center_vertical">

            </LinearLayout>


            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:padding="8dp" android:gravity="center_vertical">

                <RadioButton
                    android:id="@+id/radioSaveOn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:layout_width="160dp"
                    android:layout_height="100dp"
                    android:layout_marginStart="12dp"
                    android:contentDescription="Save-On-Foods"
                    android:src="@drawable/image3" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>


    <Button
        android:id="@+id/confirmButton"
        android:layout_width="391dp"
        android:layout_height="62dp"
        android:enabled="false"
        android:text="Confirm"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.901" />

</androidx.constraintlayout.widget.ConstraintLayout>

